{
  "variables": {
    "atlas_username": "{{env `ATLAS_BUILD_USERNAME`}}",
    "atlas_name": "{{env `ATLAS_BUILD_NAME`}}"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://releases.ubuntu.com/xenial/ubuntu-16.04-server-amd64.iso",
      "iso_checksum": "b8b172cbdf04f5ff8adc8c2c1b4007ccf66f00fc6a324a6da6eba67de71746f6",
      "iso_checksum_type": "sha256",
      "http_directory": "http",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30m",
      "disk_size": 8192,
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "guest_additions_mode": "upload",
      "guest_additions_path": "linux.iso",
      "headless": "false",
      "vm_name": "tmpl-xenial",
      "output_directory":"output-virtualbox-iso-xenial",
"boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "priority=critical ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu/xenial.cfg",
        "<wait><enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "wget http://apt.puppetlabs.com/puppetlabs-release-pc1-wily.deb",
        "echo 'vagrant' | sudo -S -E dpkg -i puppetlabs-release-pc1-wily.deb",
        "rm puppetlabs-release-pc1-wily.deb",
        "echo 'vagrant' | sudo -S -E apt-get update",
        "echo 'vagrant' | sudo -S -E DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y",
        "echo 'vagrant' | sudo -S -E DEBIAN_FRONTEND=noninteractive apt-get install puppet-agent -y"
      ]
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "puppet/ubuntu.pp",
      "module_paths": ["puppet/modules/"],
      "execute_command": "{{.FacterVars}}{{if .Sudo}} echo 'vagrant' | sudo -S -E {{end}}/opt/puppetlabs/bin/puppet apply --debug --order=manifest --modulepath='{{.ModulePath}}' {{.ManifestFile}}"
    }
  ],

  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": 9,
      "keep_input_artifact": false
    },
    {
      "type": "atlas",
      "only": ["virtualbox-iso"],
      "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
          "provider": "virtualbox"
      }
    }]
  ]
}
