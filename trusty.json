{
  "variables": {
    "version": "1.0.{{timestamp}}",
    "maint_password_hash": "{{env `MAINT_PASSWORD_HASH`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://releases.ubuntu.com/14.04.5/ubuntu-14.04.5-server-amd64.iso",
      "iso_checksum": "dde07d37647a1d2d9247e33f14e91acb10445a97578384896b4e1d985f754cc1",
      "iso_checksum_type": "sha256",
      "http_directory": "http",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30m",
      "disk_size": 8192,
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -P now",
      "guest_additions_mode": "upload",
      "guest_additions_path": "linux.iso",
      "headless": "true",
      "vm_name": "tmpl-trusty",
      "output_directory":"output-virtualbox-iso-trusty",
      "boot_command" : [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu/trusty.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ]
    },
     {
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",
      "iso_url": "http://releases.ubuntu.com/14.04.5/ubuntu-14.04.5-server-amd64.iso",
      "iso_checksum": "dde07d37647a1d2d9247e33f14e91acb10445a97578384896b4e1d985f754cc1",
      "iso_checksum_type": "sha256",
      "http_directory": "http",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30m",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -P now",
      "vm_name": "tmpl-trusty",
      "disk_type_id": "0",
      "disk_size": 8192,
      "headless": "true",
      "output_directory":"output-vmware-iso-trusty",
      "boot_command" : [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu/trusty.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "wget http://apt.puppetlabs.com/puppet-release-$(lsb_release -cs).deb",
        "echo 'vagrant' | sudo -S -E dpkg -i puppet-release-$(lsb_release -cs).deb",
        "rm puppet-release-$(lsb_release -cs).deb",
        "echo 'vagrant' | sudo -S -E apt-get update",
        "echo 'vagrant' | sudo -S -E DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y",
        "echo 'vagrant' | sudo -S -E DEBIAN_FRONTEND=noninteractive apt-get install puppet-agent -y"
      ]
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "puppet/ubuntu.pp",
      "module_paths": ["puppet/modules/"],
      "facter": {
        "maint_password_hash": "{{user `maint_password_hash`}}"
      },
      "execute_command": "echo 'vagrant' | sudo -S -E {{.FacterVars}} /opt/puppetlabs/bin/puppet apply --order=manifest --modulepath='{{.ModulePath}}' {{.ManifestFile}}"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "keep_input_artifact": false
      }
    ],
    [
      {
        "type": "compress",
        "compression_level": 9,
        "output": "{{.BuildName}}_bundle.tar.gz"
      }
    ]
  ]
}
