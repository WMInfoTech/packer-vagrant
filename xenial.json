{
  "variables": {
    "version": "1.0.{{timestamp}}",
    "maint_password_hash": "{{env `MAINT_PASSWORD_HASH`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "instance_type": "t2.micro",
      "source_ami": "ami-cf68e0d8",
      "ssh_username": "ubuntu",
      "ami_name": "wm-ubuntu-xenial-puppet4-{{isotime \"2006-01-02 (15_04_05)\"}}"
    },
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://releases.ubuntu.com/16.04.3/ubuntu-16.04.3-server-amd64.iso",
      "iso_checksum": "a06cd926f5855d4f21fb4bc9978a35312f815fbda0d0ef7fdc846861f4fc4600",
      "iso_checksum_type": "sha256",
      "http_directory": "http",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30m",
      "disk_size": 8192,
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "guest_additions_mode": "upload",
      "guest_additions_path": "linux.iso",
      "headless": "false",
      "vm_name": "tmpl-xenial",
      "output_directory":"output-virtualbox-iso-xenial",
      "boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "priority=critical ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu/xenial.cfg",
        "<wait><enter>"
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",
      "iso_url": "http://releases.ubuntu.com/16.04.3/ubuntu-16.04.3-server-amd64.iso",
      "iso_checksum": "a06cd926f5855d4f21fb4bc9978a35312f815fbda0d0ef7fdc846861f4fc4600",
      "iso_checksum_type": "sha256",
      "http_directory": "http",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "30m",
      "disk_size": 8192,
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "headless": "false",
      "vm_name": "tmpl-xenial",
      "output_directory":"output-vmware-iso-xenial",
      "boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "priority=critical ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu/xenial.cfg",
        "<wait><enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "wget http://apt.puppetlabs.com/puppet-release-xenial.deb",
        "echo 'vagrant' | sudo -S -E dpkg -i puppet-release-xenial.deb",
        "rm puppet-release-xenial.deb",
        "echo 'vagrant' | sudo -S -E apt-get update",
        "echo 'vagrant' | sudo -S -E DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y",
        "echo 'vagrant' | sudo -S -E DEBIAN_FRONTEND=noninteractive apt-get install puppet-agent -y",
        "echo 'vagrant' | sudo -S -E mkdir -p /tmp/packer-puppet-masterless",
        "echo 'vagrant' | sudo -S -E sh -c 'echo \"%sudo ALL=(ALL) NOPASSWD: ALL\" > /etc/sudoers.d/10_sudo'"
      ]
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "puppet/ubuntu.pp",
      "module_paths": ["puppet/modules/"],
      "facter": {
        "maint_password_hash": "{{user `maint_password_hash`}}"
      },
      "puppet_bin_dir" : "/opt/puppetlabs/bin"
    }
  ],

  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "keep_input_artifact": false
      }
    ],
    [
      {
        "type": "compress",
        "compression_level": 9,
        "output": "{{.BuildName}}_bundle.tar.gz"
      }
    ]
  ]
}
